<!DOCTYPE html>
<html>

<head>
  <title>All Tasks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
     background: linear-gradient(to right, #f0f4f8, #e0f7fa);
      min-height: 100vh;
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    main {
      padding-top: 40px;
    }

    h2 {
      text-align: center;
      color: #512da8;
      margin-bottom: 30px;
      font-weight: bold;
    }

    .table-container {
      background-color: #ffffff;
      padding: 30px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    table {
      
      border-spacing: 0 12px;
    }

    thead {
      background-color: #7e57c2;
      color: white;
    }

    .table td,
    .table th {
      border: none !important;
      background-color: #fdfbff;
    }

    .table tbody tr:hover {
      background-color: #ede7f6;
      transition: 0.3s;
    }

    
    .table td:first-child {
      font-weight: 500;
      color: #4527a0;
    }
  </style>
</head>

<body>
  <header>
    <%- include('header') %>
  </header>

  <main>
    <div class="container">
      <div class="table-container">
        <h2>Assigned Tasks</h2>
        <table class="table align-middle table-bordered table-hover bg-white shadow-sm rounded ">
          <thead class="table-dark">
            <tr>
              <th>Employee Name</th>
              <th>Task Title</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody>
            <% tasks.forEach(task => { %>
              <tr>
                <td><%= task.empName %></td>
                <td><%= task.title %></td>
                <td><%= task.description %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </main>
</body>

</html>
